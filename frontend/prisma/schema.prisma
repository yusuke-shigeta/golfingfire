generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

// スコアを保存するためのモデル（テーブル）
model Score {
  id        Int      @id @default(autoincrement()) // 自動で増えるID
  course    String   // ゴルフ場名
  score     Int      // スコア
  player    String?  // プレイヤー名（? は空でもOKという意味）
  createdAt DateTime @default(now()) // 登録日時
}